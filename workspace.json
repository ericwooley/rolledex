{
  "version": 2,
  "cli": { "defaultCollection": "@nrwl/next" },
  "generators": {
    "@nrwl/react": { "application": { "babel": true } },
    "@nrwl/next": {
      "application": { "style": "styled-components", "linter": "eslint" }
    }
  },
  "projects": {
    "expo": {
      "root": "apps/expo",
      "sourceRoot": "apps/expo/src",
      "projectType": "application",
      "targets": {
        "build": {
          "builder": "@nrwl/workspace:run-commands",
          "options": {
            "outputPath": "dist/apps/expo",
            "commands": [
              {
                "command": "mkdir -p dist/apps/expo && rm -rf dist/apps/expo || echo 'no previous build'; expo build:web --config ./apps/expo/src/app.json; mv web-build dist/apps/expo"
              }
            ]
          },
          "outputs": ["{options.outputPath}"],
          "configurations": {
            "production": {
              "optimization": true,
              "extractLicenses": true,
              "inspect": false,
              "fileReplacements": [
                {
                  "replace": "apps/expo/src/environments/environment.ts",
                  "with": "apps/expo/src/environments/environment.prod.ts"
                }
              ]
            }
          }
        },
        "serve": {
          "builder": "@nrwl/workspace:run-commands",
          "options": {
            "commands": [
              {
                "command": "expo start --config ./apps/expo/src/app.json"
              }
            ]
          }
        },
        "lint": {
          "executor": "@nrwl/linter:eslint",
          "options": { "lintFilePatterns": ["apps/expo/**/*.ts"] }
        },
        "test": {
          "executor": "@nrwl/jest:jest",
          "outputs": ["coverage/apps/expo"],
          "options": {
            "jestConfig": "apps/expo/jest.config.js",
            "passWithNoTests": true
          }
        }
      }
    }
  }
}
